{
  "plants": [
    {
      "id": "tea_plant",
      "name": "Tea Plant",
      "species": "Camellia sinensis",
      "lifespan": { "min": 30, "max": 50 },
      "states": {
        "seed": {
          "needs": { "resources": ["water"], "season": ["spring", "summer"] },
          "vulnerabilities": [
            { "event": "drought", "outcome": "die" }
          ],
          "actions": {
            "plant": { "effect": "move_card", "location": "garden", "newState": "seedling" },
            "water": { "effect": "protect_plant", "condition": "water", "duration": 2 }
          },
          "transitions": [
            { "to": "seedling", "actions": { "min": 1, "max": 2 } }
          ]
        },
        "seedling": {
          "needs": { "resources": ["sunlight", "water"], "season": ["spring", "summer"] },
          "vulnerabilities": [
            { "event": "drought", "outcome": "die" },
            { "event": "frost", "outcome": "die" }
          ],
          "actions": {
            "clone": { "effect": "add_card", "target": "tea_plant", "state": "seedling", "location": "hand" },
            "water": { "effect": "protect_plant", "condition": "water", "duration": 2 },
            "shelter": { "effect": "protect_plant", "condition": "sunlight", "duration": 2 }
          },
          "transitions": [
            { "to": "mature", "actions": { "min": 36, "max": 36 } }
          ]
        },
        "mature": {
          "needs": { "resources": ["sunlight", "water"], "season": ["spring", "summer", "autumn", "winter"] },
          "vulnerabilities": [
            { "event": "drought", "outcome": "die" },
            { "event": "frost", "outcome": "die" },
            { "event": "pests", "outcome": "die" }
          ],
          "actions": {
            "harvest": { "effect": "add_card", "target": "tea_leaf_raw", "location": "kitchen" },
            "water": { "effect": "protect_plant", "condition": "water", "duration": 2 },
            "shelter": { "effect": "protect_plant", "condition": "sunlight", "duration": 2 }
          },
          "transitions": [
            { "to": "flowering", "actions": { "min": 4, "max": 12 } }
          ]
        },
        "flowering": {
          "needs": { "resources": ["sunlight", "water"], "season": ["spring"] },
          "vulnerabilities": [
            { "event": "drought", "outcome": "die" },
            { "event": "frost", "outcome": "die" },
            { "event": "pests", "outcome": "die" },
            { "event": "disease", "outcome": "die" }
          ],
          "actions": {
            "water": { "effect": "protect_plant", "condition": "water", "duration": 2 },
            "shelter": { "effect": "protect_plant", "condition": "sunlight", "duration": 2 }
          },
          "transitions": [
            { "to": "fruiting", "actions": { "min": 3, "max": 3 } }
          ]
        },
        "fruiting": {
          "needs": { "resources": ["sunlight", "water"], "season": ["summer"] },
          "vulnerabilities": [
            { "event": "drought", "outcome": "die" },
            { "event": "frost", "outcome": "die" },
            { "event": "pests", "outcome": "die" },
            { "event": "disease", "outcome": "die" }
          ],
          "actions": {
            "harvest_seed": { "effect": "add_card", "target": "tea_plant", "location": "shed", "state": "seed" },
            "water": { "effect": "protect_plant", "condition": "water", "duration": 2 },
            "shelter": { "effect": "protect_plant", "condition": "sunlight", "duration": 2 }
          },
          "transitions": [
            { "to": "seed", "actions": { "min": 3, "max": 3 } }
          ]
        },
        "dead": {
          "needs": { "resources": ["sunlight", "water"], "season": ["spring", "summer", "autumn", "winter"] },
          "vulnerabilities": [],
          "actions": {
            "harvest_seed": { "effect": "add_card", "target": "tea_plant", "location": "shed", "state": "seed" }
          },
          "transitions": [
            { "to": "compost", "actions": { "min": 3, "max": 6 } }
          ]
        },
        "compost": {
          "needs": { "resources": ["sunlight", "water"], "season": ["spring", "summer"] },
          "vulnerabilities": [],
          "actions": {
            "compost": { "effect": "add_card", "target": "fertilizer_token", "location": "shed" }
          },
          "transitions": []
        }
      }
    }
  ],
  "ingredients": [
    {
      "id": "tea_leaf_raw",
      "name": "Tea Leaf (Raw)",
      "actions": {
        "process": { "effect": "add_card", "target": "oolong_leaf", "location": "kitchen", "state": "processed" },
        "brew": { "effect": "add_card", "target": "green_tea", "location": "cafe" }
      }
    },
    {
      "id": "oolong_leaf",
      "name": "Oolong Tea Leaf",
      "actions": {
        "process": { "effect": "add_card", "target": "black_leaf", "location": "kitchen", "state": "processed" },
        "brew": { "effect": "add_card", "target": "oolong_tea", "location": "cafe" }
      }
    },
    {
      "id": "black_leaf",
      "name": "Black Tea Leaf",
      "actions": {
        "brew": { "effect": "add_card", "target": "black_tea", "location": "cafe" }
      }
    },
    {
      "id": "tea_seed",
      "name": "Tea Seed",
      "actions": {}
    },
    {
      "id": "fertilizer_token",
      "name": "Fertilizer Token",
      "actions": {}
    }
  ],
  "teas": [
    {
      "id": "green_tea",
      "name": "Green Tea",
      "type": "Tea",
      "actions": {
        "consume": { "effect": "apply_effect", "target": { "type": "peek_weather", "value": 1 } }
      }
    },
    {
      "id": "oolong_tea",
      "name": "Oolong Tea",
      "type": "Tea",
      "actions": {
        "consume": { "effect": "apply_effect", "target": { "type": "past_action", "value": 1 } }
      }
    },
    {
      "id": "black_tea",
      "name": "Black Tea",
      "type": "Tea",
      "actions": {
        "consume": { "effect": "apply_effect", "target": { "type": "future_action", "value": 1 } }
      }
    }
  ]
}
