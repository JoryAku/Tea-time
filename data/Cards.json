          "transitions": [
            { "to": "fruiting", "actions": { "min": 3, "max": 3 } }
          ]
        },
        "fruiting": {
          "needs": { "resources": ["sunlight", "water"], "season": ["summer"] },
          "vulnerabilities": [
            { "event": "drought", "outcome": "die" },
            { "event": "frost", "outcome": "die" },
            { "event": "pests", "outcome": "die" },
            { "event": "disease", "outcome": "die" }
          ],
          "actions": {
            "harvest_seed": { "effect": "add_card", "target": "tea_plant", "location": "shed", "state": "seed" },
